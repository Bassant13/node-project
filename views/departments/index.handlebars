<h1>Departments</h1>

<div class="my-2">
  <a href = "/department/create" >Add a new Department</a>
</div>

{{#each department}}

<div class="d-flex justify-content-between">
  <a href="/department/{{_id}}">
  
  {{name}}

  </a>
  <div>
    <a href="/department/{{_id}}/edit">
    Edit 
    </a>
    <form action="/department/{{_id}}?_method=DELETE" method="post">
     <button type="submit">Delete</button>

    </form>
  </div>
  </div>

{{/each}}
